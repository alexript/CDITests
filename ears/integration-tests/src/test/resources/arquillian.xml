<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <container qualifier="jboss" default="true">
        <protocol type="Servlet 3.0">
            <property name="executionType">MANAGED</property>
        </protocol>
        <configuration>
            <property name="jbossHome">../../${vendor.foldername}/${wildfly.foldername}</property>
            <property name="modulePath">../../${vendor.foldername}/${wildfly.foldername}/modules</property>
            <property name="port">${wildfly.port}</property>
            <property name="managementPort">${wildfly.managementPort}</property>
            <property name="jbossArguments">-Djboss.http.port=${wildfly.port} -Djboss.management.http.port=${wildfly.managementPort}</property>
        </configuration>
    </container>
</arquillian>